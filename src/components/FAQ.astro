---
const { faqs } = Astro.props;
---
<div class="max-w-4xl mx-auto">
  <div class="space-y-4">
    {faqs.map((faq) => (
      <details class="bg-white border rounded-lg">
        <summary class="p-4 cursor-pointer font-semibold hover:bg-slate-50">
          {faq.q}
        </summary>
        <div class="px-4 pb-4 text-slate-600">
          {faq.a}
        </div>
      </details>
    ))}
  </div>
</div>
