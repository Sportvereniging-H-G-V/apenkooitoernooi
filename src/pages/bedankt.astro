---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { pickVariant } from '../lib/abVariant';

const site = await import('../../content/site.json');
const { v, setCookie } = pickVariant(Astro.request.headers.get('cookie') || '');
Astro.response.headers.set('Set-Cookie', setCookie);

const emailError = Astro.url.searchParams.get('email_error') === 'true';
---
<Base title="Bedankt - Apenkooitoernooi">
  <Header title={site.default.brand} />
  
  <!-- Custom Hero sectie -->
  <section class="relative py-20 overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0">
      <div class="absolute top-10 left-10 w-32 h-32 bg-green-200/30 rounded-full blur-2xl"></div>
      <div class="absolute top-32 right-20 w-24 h-24 bg-blue-200/30 rounded-full blur-xl"></div>
      <div class="absolute bottom-20 left-1/4 w-40 h-40 bg-orange-200/20 rounded-full blur-3xl"></div>
    </div>
    
    <div class="max-w-6xl mx-auto px-6 text-center relative z-10">
      <div class="text-6xl mb-8">ğŸ‰</div>
      <h1 class="text-5xl md:text-7xl font-bold text-slate-900 mb-8 leading-tight">
        Bedankt voor je aanmelding!
      </h1>
      <p class="text-2xl text-slate-600 leading-relaxed max-w-4xl mx-auto mb-12">
        We hebben je inzending ontvangen. {emailError ? 'Let op: Er was een probleem met het versturen van de bevestigingsmail. We hebben je aanmelding wel ontvangen.' : 'Je ontvangt binnenkort een e-mailbevestiging.'}
      </p>
      {emailError && (
        <div class="max-w-2xl mx-auto mt-8 p-6 bg-amber-50 border-l-4 border-amber-400 rounded-lg">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <span class="text-2xl">âš ï¸</span>
            </div>
            <div class="ml-3 text-left">
              <h3 class="text-lg font-semibold text-amber-800 mb-2">Bevestigingsmail niet verzonden</h3>
              <p class="text-sm text-amber-700">
                Je aanmelding is wel succesvol ontvangen en opgeslagen. Er was echter een technisch probleem met het versturen van de bevestigingsmail. 
                Neem gerust contact met ons op als je vragen hebt.
              </p>
            </div>
          </div>
        </div>
      )}
    </div>
  </section>
  
  <!-- Wat gebeurt er nu? -->
  <section class="py-20 -mt-4">
    <div class="max-w-4xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 mb-4">Wat gebeurt er nu?</h2>
        <div class="w-24 h-1 bg-primary-600 mx-auto"></div>
      </div>
      
      <div class="bg-white rounded-2xl p-8 shadow-xl border border-green-200 mb-8">
        <div class="grid md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">ğŸ“§</span>
            </div>
            <h3 class="text-lg font-semibold text-slate-900 mb-2">Bevestiging</h3>
            <p class="text-slate-600 text-sm">Je ontvangt een bevestigingsmail</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">âš™ï¸</span>
            </div>
            <h3 class="text-lg font-semibold text-slate-900 mb-2">Verwerking</h3>
            <p class="text-slate-600 text-sm">We verwerken je aanmelding</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">ğŸ“‹</span>
            </div>
            <h3 class="text-lg font-semibold text-slate-900 mb-2">Informatie</h3>
            <p class="text-slate-600 text-sm">Je krijgt meer informatie over het toernooi</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Acties -->
  <section class="py-20 -mt-4">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold text-slate-900 mb-6">Volgende stappen</h2>
      <p class="text-xl text-slate-600 mb-8">
        Bekijk de spelregels of ga terug naar de homepage voor meer informatie.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/" class="inline-flex items-center px-8 py-4 bg-primary-600 text-white rounded-xl font-semibold text-lg hover:bg-primary-700 hover:shadow-lg transform hover:-translate-y-1 transition-all duration-300 shadow-md">
          ğŸ  Terug naar home
        </a>
        <a href="/spelregels" class="inline-flex items-center px-8 py-4 bg-slate-600 text-white rounded-xl font-semibold text-lg hover:bg-slate-700 hover:shadow-lg transform hover:-translate-y-1 transition-all duration-300 shadow-md">
          ğŸ“‹ Bekijk spelregels
        </a>
      </div>
    </div>
  </section>
  
  <Footer org={site.default.org} contact={site.default.contact} />
</Base>
