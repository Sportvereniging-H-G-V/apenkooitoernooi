---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const site = await import('../../content/site.json');
const contact = await import('../../content/contact.json');

// Site key wordt runtime opgehaald via API endpoint
// Dit voorkomt problemen met build-time vs runtime environment variables
const turnstileSiteKey = '';
---
<Base title="Contact - Apenkooitoernooi">
  <Header title={site.default.brand} />
  
  <!-- Custom Hero sectie -->
  <section class="relative pt-20 pb-0 sm:pt-20 sm:pb-0 md:pt-20 md:pb-0 overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0">
      <div class="absolute top-10 left-10 w-32 h-32 bg-primary-200/30 rounded-full blur-2xl"></div>
      <div class="absolute top-32 right-20 w-24 h-24 bg-blue-200/30 rounded-full blur-xl"></div>
      <div class="absolute bottom-20 left-1/4 w-40 h-40 bg-orange-200/20 rounded-full blur-3xl"></div>
    </div>
    
    <div class="max-w-6xl mx-auto px-6 text-center relative z-10">
      <h1 class="text-5xl md:text-7xl font-bold text-slate-900 mb-8 leading-tight">
        {contact.default.title}
      </h1>
      <p class="text-2xl text-slate-600 leading-relaxed max-w-4xl mx-auto mb-4">
        {contact.default.subtitle}
      </p>
      <p class="text-lg text-slate-500 leading-relaxed max-w-3xl mx-auto">
        Apenkooitoernooi wordt georganiseerd door {site.default.org}.
      </p>
    </div>
  </section>
  
  <!-- Contactgegevens en formulier -->
  <section class="pt-8 sm:pt-10 md:pt-12 pb-12 sm:pb-16 md:pb-20 -mt-4">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-stretch">
        <!-- Contactgegevens (links) -->
        <div class="flex flex-col space-y-6">
          <div class="bg-white rounded-2xl p-6 sm:p-8 shadow-xl border border-slate-200 hover:shadow-2xl transition-shadow duration-300 text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">üìß</span>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-2">E-mail</h3>
            <p class="text-sm text-slate-600 mb-2">Apenkooi Toernooi</p>
            <a href={`mailto:${contact.default.contact.email}`} class="text-primary-600 hover:text-primary-700 font-medium break-words">
              {contact.default.contact.email}
            </a>
          </div>
          
          <div class="bg-white rounded-2xl p-6 sm:p-8 shadow-xl border border-slate-200 hover:shadow-2xl transition-shadow duration-300 text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">üìû</span>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-2">Telefoon</h3>
            <a href={`tel:${contact.default.contact.phone.replace(/\s/g, '')}`} class="text-primary-600 hover:text-primary-700 font-medium">
              {contact.default.contact.phone}
            </a>
          </div>
          
          {/* Social Media - allemaal in √©√©n blok naast elkaar */}
          {(contact.default.contact.social?.facebook || contact.default.contact.social?.instagram) && (
            <div class="bg-white rounded-2xl p-4 sm:p-6 md:p-8 shadow-xl border border-slate-200">
              <h3 class="text-lg sm:text-xl font-bold text-slate-900 mb-4 sm:mb-6 text-center">Volg ons op social media</h3>
              <div class="grid grid-cols-3 gap-3 sm:gap-4">
                {/* Facebook Apenkooitoernooi */}
                {contact.default.contact.social?.facebook && contact.default.contact.social.facebook[0] && (
                  <a href={contact.default.contact.social.facebook[0]} target="_blank" rel="noopener noreferrer" 
                     class="group flex flex-col items-center p-3 sm:p-4 bg-blue-50 rounded-xl hover:bg-blue-100 transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
                    <div class="mb-2 sm:mb-3 group-hover:scale-110 transition-transform duration-300">
                      <svg class="w-8 h-8 sm:w-10 sm:h-10 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                      </svg>
                    </div>
                    <h4 class="font-semibold text-xs sm:text-sm text-slate-900 mb-1">Facebook</h4>
                    <p class="text-xs text-slate-600 text-center break-words">Apenkooitoernooi</p>
                  </a>
                )}
                
                {/* Facebook HGV */}
                {contact.default.contact.social?.facebook && contact.default.contact.social.facebook[1] && (
                  <a href={contact.default.contact.social.facebook[1]} target="_blank" rel="noopener noreferrer" 
                     class="group flex flex-col items-center p-3 sm:p-4 bg-blue-50 rounded-xl hover:bg-blue-100 transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
                    <div class="mb-2 sm:mb-3 group-hover:scale-110 transition-transform duration-300">
                      <svg class="w-8 h-8 sm:w-10 sm:h-10 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                      </svg>
                    </div>
                    <h4 class="font-semibold text-xs sm:text-sm text-slate-900 mb-1">Facebook</h4>
                    <p class="text-xs text-slate-600 text-center break-words">HGV Hengelo</p>
                  </a>
                )}
                
                {/* Instagram */}
                {contact.default.contact.social?.instagram && (
                  <a href={contact.default.contact.social.instagram} target="_blank" rel="noopener noreferrer" 
                     class="group flex flex-col items-center p-3 sm:p-4 bg-pink-50 rounded-xl hover:bg-pink-100 transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
                    <div class="mb-2 sm:mb-3 group-hover:scale-110 transition-transform duration-300">
                      <svg class="w-8 h-8 sm:w-10 sm:h-10 text-pink-600" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                      </svg>
                    </div>
                    <h4 class="font-semibold text-xs sm:text-sm text-slate-900 mb-1">Instagram</h4>
                    <p class="text-xs text-slate-600 text-center break-words">Sportvereniging HGV</p>
                  </a>
                )}
              </div>
            </div>
          )}
        </div>
        
        <!-- Contactformulier (rechts) -->
        <div class="flex h-full">
          <form method="post" action="/api/submit" class="flex flex-col gap-4 sm:gap-5 md:gap-6 bg-white p-4 sm:p-6 md:p-8 rounded-3xl shadow-2xl border border-slate-200 w-full">
            <input type="hidden" name="formId" value="contact" />
            
            <!-- Titel -->
            <div class="mb-1 sm:mb-2 text-center">
              <h3 class="text-xl font-bold text-slate-900">Stel je vraag hier</h3>
            </div>
            
            <!-- Naam -->
            <div>
              <label for="naam" class="block text-sm font-medium text-slate-700 mb-1.5 sm:mb-2">
                Naam *
              </label>
              <input 
                id="naam"
                name="naam" 
                type="text"
                placeholder="Je volledige naam" 
                required 
                minlength="2"
                class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" 
              />
            </div>
            
            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-slate-700 mb-1.5 sm:mb-2">
                E-mailadres *
              </label>
              <input 
                id="email"
                name="email" 
                type="email"
                placeholder="jouw@email.nl" 
                required 
                class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" 
              />
            </div>
            
            <!-- Bericht -->
            <div>
              <label for="bericht" class="block text-sm font-medium text-slate-700 mb-1.5 sm:mb-2">
                Bericht *
              </label>
              <textarea 
                id="bericht"
                name="bericht" 
                placeholder="Typ hier je vraag of opmerking..." 
                required 
                minlength="10"
                rows="6"
                class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors resize-y" 
              ></textarea>
            </div>
            
            <!-- Privacy / Voorwaarden -->
            <div class="bg-amber-50 border border-amber-200 rounded-lg p-3 sm:p-4">
              <label class="flex items-start gap-3 cursor-pointer">
                <input 
                  type="checkbox" 
                  name="agree" 
                  value="true"
                  required 
                  class="mt-1 w-4 h-4 text-primary-600 border-slate-300 rounded focus:ring-primary-500 focus:ring-2"
                />
                <span class="text-xs sm:text-sm text-amber-800 break-words">
                  Ik ga akkoord met de <a href="/voorwaarden" class="underline hover:text-amber-900 font-semibold" target="_blank" rel="noopener noreferrer">algemene voorwaarden</a> en geef toestemming voor het verwerken van mijn gegevens. *
                </span>
              </label>
            </div>
            
            <!-- Honeypot -->
            <input type="text" name="company" class="hidden" tabindex="-1" autocomplete="off" />
            
            <!-- Cloudflare Turnstile -->
            <div id="turnstile-container" class="flex justify-center"></div>
            <!-- Laad Turnstile script direct (eerder dan dynamisch) -->
            <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
            
            <!-- Error message container -->
            <div id="form-error" class="hidden bg-red-50 border border-red-200 rounded-lg p-3 sm:p-4 text-red-800 text-sm"></div>
            
            <!-- Submit button -->
            <button 
              type="submit" 
              id="submit-btn"
              class="w-full px-6 sm:px-8 py-3 sm:py-4 bg-primary-600 text-white rounded-xl font-semibold text-sm sm:text-base md:text-lg hover:bg-primary-700 hover:shadow-lg transform hover:-translate-y-1 transition-all duration-300 shadow-md disabled:opacity-50 disabled:cursor-not-allowed"
            >
              üìß Versturen
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
  
  <script>
    // Laad Turnstile widget dynamisch via API endpoint
    (function() {
      let widgetLoaded = false;
      let widgetId = null;
      
      document.addEventListener('DOMContentLoaded', async () => {
        if (widgetLoaded) return;
        
        const form = document.querySelector('form[action="/api/submit"]');
        const errorDiv = document.getElementById('form-error');
        const submitBtn = document.getElementById('submit-btn');
        const container = document.getElementById('turnstile-container');
        
        if (!form || !container) return;
        
        // Haal site key op via API endpoint
        try {
          const response = await fetch('/api/turnstile-key');
          const data = await response.json();
          
          if (data.siteKey && data.siteKey.length > 0) {
            // Wacht tot Turnstile script geladen is (wordt al direct in HTML geladen)
            if (typeof window.turnstile === 'undefined') {
              // Wacht tot script geladen is (max 3 seconden)
              await new Promise((resolve) => {
                if (typeof window.turnstile !== 'undefined') {
                  resolve();
                  return;
                }
                let attempts = 0;
                const checkInterval = setInterval(() => {
                  attempts++;
                  if (typeof window.turnstile !== 'undefined' || attempts >= 30) {
                    clearInterval(checkInterval);
                    resolve();
                  }
                }, 100);
              });
            }
            
            // Render Turnstile widget (alleen als er nog geen widget is)
            if (typeof window.turnstile !== 'undefined' && !widgetLoaded && container.children.length === 0) {
              widgetLoaded = true;
              
              // Maak een uniek element voor de widget
              const widgetDiv = document.createElement('div');
              widgetDiv.id = 'turnstile-widget';
              container.appendChild(widgetDiv);
              
              try {
                // Render handmatig met callbacks
                widgetId = window.turnstile.render(widgetDiv, {
                  sitekey: data.siteKey,
                  theme: 'light',
                  callback: function(token) {
                    // Token is gegenereerd
                  },
                  'error-callback': function(error) {
                    if (error === '110200' || error === 110200) {
                      const currentHost = window.location.host;
                      container.innerHTML = '<div class="bg-red-50 border border-red-200 rounded-lg p-3 text-red-800 text-sm"><p class="font-semibold mb-2">‚ö†Ô∏è Domein niet toegestaan</p><p class="mb-2">Het domein <code class="bg-red-100 px-1 rounded">' + currentHost + '</code> is niet toegevoegd aan de toegestane domeinen in Turnstile.</p><p class="text-xs">Voeg toe in Cloudflare Dashboard: Security ‚Üí Turnstile ‚Üí Je site ‚Üí Domains</p></div>';
                    }
                  }
                });
              } catch (renderError) {
                container.innerHTML = '<div class="bg-red-50 border border-red-200 rounded-lg p-3 text-red-800 text-sm text-center">‚ö†Ô∏è Fout bij renderen van captcha: ' + renderError.message + '</div>';
              }
            }
          } else {
            container.innerHTML = '<div class="bg-red-50 border border-red-200 rounded-lg p-3 text-red-800 text-sm text-center">‚ö†Ô∏è Captcha niet beschikbaar: PUBLIC_TURNSTILE_SITE_KEY niet ingesteld in Cloudflare Dashboard voor Preview environment.</div>';
          }
        } catch (err) {
          container.innerHTML = '<div class="bg-red-50 border border-red-200 rounded-lg p-3 text-red-800 text-sm text-center">‚ö†Ô∏è Fout bij laden van captcha. Probeer de pagina te verversen.</div>';
        }
        
        form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // Verberg vorige errors
        errorDiv.classList.add('hidden');
        errorDiv.textContent = '';
        
        // Check of Turnstile token aanwezig is
        const turnstileInput = form.querySelector('input[name="cf-turnstile-response"]');
        const turnstileWidget = form.querySelector('.cf-turnstile');
        let turnstileToken = turnstileInput ? turnstileInput.value : null;
        
        if (!turnstileToken) {
          // Wacht even en probeer opnieuw (Turnstile kan async zijn)
          await new Promise(resolve => setTimeout(resolve, 500));
          const retryInput = form.querySelector('input[name="cf-turnstile-response"]');
          let retryToken = retryInput ? retryInput.value : null;
          
          if (!retryToken && widgetId !== null && typeof window.turnstile !== 'undefined') {
            try {
              window.turnstile.reset(widgetId);
              await new Promise(resolve => setTimeout(resolve, 1000));
              const resetInput = form.querySelector('input[name="cf-turnstile-response"]');
              turnstileToken = resetInput ? resetInput.value : null;
            } catch (e) {
              // Ignore errors
            }
          }
          
          if (!turnstileToken) {
            errorDiv.textContent = 'Captcha is nog niet geladen of token is verlopen. Wacht even en probeer het opnieuw.';
            errorDiv.classList.remove('hidden');
            errorDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            return;
          }
        }
        
        // Disable submit button
        submitBtn.disabled = true;
        const originalText = submitBtn.textContent;
        submitBtn.textContent = 'Verzenden...';
        
        try {
          const formData = new FormData(form);
          const response = await fetch('/api/submit', {
            method: 'POST',
            body: formData
          });
          
          // Handle success (200-299)
          if (response.ok) {
            try {
              const data = await response.json();
              if (data.success) {
                // Toon succesmelding
                errorDiv.classList.remove('hidden', 'bg-red-50', 'border-red-200', 'text-red-800');
                errorDiv.classList.add('bg-green-50', 'border-green-200', 'text-green-800');
                errorDiv.textContent = data.message || 'Je bericht is succesvol verzonden! We nemen zo snel mogelijk contact met je op.';
                errorDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                
                // Reset formulier
                form.reset();
                
                // Reset Turnstile widget
                if (widgetId !== null && typeof window.turnstile !== 'undefined') {
                  try {
                    window.turnstile.reset(widgetId);
                  } catch (e) {
                    // Ignore errors
                  }
                }
                
                // Verberg succesmelding na 5 seconden
                setTimeout(() => {
                  errorDiv.classList.add('hidden');
                  errorDiv.classList.remove('bg-green-50', 'border-green-200', 'text-green-800');
                  errorDiv.classList.add('bg-red-50', 'border-red-200', 'text-red-800');
                }, 5000);
                
                return;
              }
            } catch {
              // Als JSON parsing faalt, ga door naar error handling
            }
          }
          
          // Parse error response
          let errorMessage = 'Er is een fout opgetreden. Probeer het opnieuw.';
          try {
            const errorData = await response.json();
            errorMessage = errorData.error || errorMessage;
            
            // Toon field errors als die er zijn
            if (errorData.details && errorData.details.fieldErrors) {
              const fieldErrors: string[] = [];
              const fieldNames: Record<string, string> = {
                'naam': 'Naam',
                'email': 'E-mailadres',
                'bericht': 'Bericht'
              };
              
              Object.entries(errorData.details.fieldErrors).forEach(([field, errors]) => {
                if (Array.isArray(errors) && errors.length > 0) {
                  const fieldName = fieldNames[field] || field;
                  const errorText = errors.map((err: string) => {
                    if (err.includes('Too small') && err.includes('>=2')) {
                      return 'moet minimaal 2 karakters bevatten';
                    }
                    if (err.includes('Too small') && err.includes('>=10')) {
                      return 'moet minimaal 10 karakters bevatten';
                    }
                    if (err.includes('Invalid email')) {
                      return 'is geen geldig e-mailadres';
                    }
                    // Vertaal andere veelvoorkomende foutmeldingen
                    if (err.includes('Required')) {
                      return 'is verplicht';
                    }
                    if (err.includes('Expected')) {
                      return 'heeft een ongeldige waarde';
                    }
                    if (err.includes('Invalid')) {
                      return 'is ongeldig';
                    }
                    return err;
                  }).join(', ');
                  fieldErrors.push(`‚Ä¢ ${fieldName}: ${errorText}`);
                }
              });
              
              if (fieldErrors.length > 0) {
                errorMessage = 'Controleer de volgende velden:\n\n' + fieldErrors.join('\n');
              }
            }
          } catch {
            // Vertaal HTTP status codes naar Nederlands
            let statusText = response.statusText;
            if (response.status === 400) {
              statusText = 'Ongeldig verzoek';
            } else if (response.status === 401) {
              statusText = 'Niet geautoriseerd';
            } else if (response.status === 403) {
              statusText = 'Toegang geweigerd';
            } else if (response.status === 404) {
              statusText = 'Niet gevonden';
            } else if (response.status === 429) {
              statusText = 'Te veel verzoeken';
            } else if (response.status === 500) {
              statusText = 'Serverfout';
            } else if (response.status === 503) {
              statusText = 'Service niet beschikbaar';
            }
            errorMessage = `Fout: ${response.status} ${statusText}`;
          }
          
          // Toon error
          errorDiv.textContent = errorMessage;
          errorDiv.classList.remove('hidden');
          
          // Scroll naar error
          errorDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
          
        } catch (err) {
          errorDiv.textContent = 'Er is een netwerkfout opgetreden. Controleer je internetverbinding en probeer het opnieuw.';
          errorDiv.classList.remove('hidden');
          errorDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        } finally {
          // Re-enable submit button
          submitBtn.disabled = false;
          submitBtn.textContent = originalText;
        }
      });
      });
    })();
  </script>
  
  <!-- Extra links sectie -->
  <section class="py-12 sm:py-16 md:py-20 -mt-4">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-slate-900 mb-4 sm:mb-6 px-2">Nog meer informatie?</h2>
      <p class="text-base sm:text-lg text-slate-600 mb-6 sm:mb-8 px-2">
        Kijk ook eens bij onze veelgestelde vragen of bekijk de spelregels.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/faq" class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-primary-600 text-white rounded-xl font-semibold text-base sm:text-lg hover:bg-primary-700 hover:shadow-lg transform hover:-translate-y-1 transition-all duration-300 shadow-md">
          üìñ FAQ bekijken
        </a>
        <a href="/spelregels" class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-slate-600 text-white rounded-xl font-semibold text-base sm:text-lg hover:bg-slate-700 hover:shadow-lg transform hover:-translate-y-1 transition-all duration-300 shadow-md">
          üìã Spelregels bekijken
        </a>
      </div>
    </div>
  </section>
  
  <Footer org={site.default.org} contact={site.default.contact} />
</Base>
