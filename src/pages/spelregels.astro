---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const site = await import('../../content/site.json');
const spelregels = await import('../../content/spelregels.json');
---
<Base title="Spelregels Apenkooitoernooi - Alle regels en afspraken">
  <Header title={site.default.brand} />
  
  <!-- Custom Hero sectie -->
  <section class="relative py-20 overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0">
      <div class="absolute top-10 left-10 w-32 h-32 bg-primary-200/30 rounded-full blur-2xl"></div>
      <div class="absolute top-32 right-20 w-24 h-24 bg-blue-200/30 rounded-full blur-xl"></div>
      <div class="absolute bottom-20 left-1/4 w-40 h-40 bg-orange-200/20 rounded-full blur-3xl"></div>
    </div>
    
    <div class="max-w-6xl mx-auto px-6 text-center relative z-10">
      <h1 class="text-5xl md:text-7xl font-bold text-slate-900 mb-8 leading-tight">
        {spelregels.default.title}
      </h1>
      <p class="text-2xl text-slate-600 leading-relaxed max-w-4xl mx-auto mb-12">
        {spelregels.default.subtitle}
      </p>
      <p class="text-xl text-slate-600 leading-relaxed max-w-3xl mx-auto mb-4">
        {spelregels.default.intro}
      </p>
      <p class="text-lg text-slate-500 leading-relaxed max-w-3xl mx-auto">
        Apenkooitoernooi wordt georganiseerd door {site.default.org}.
      </p>
    </div>
  </section>
  
  <!-- Spelregels secties -->
  <section class="py-20 -mt-4">
    <div class="max-w-6xl mx-auto px-6">
      <div class="space-y-12">
        {spelregels.default.sections.map((section) => (
          <div class="bg-white rounded-3xl shadow-xl border border-slate-200 overflow-hidden">
            <div class="bg-gradient-to-r from-primary-600 to-blue-600 text-white p-8">
              <h2 class="text-4xl font-bold">{section.title}</h2>
            </div>
            <div class="p-8">
              <div class="grid gap-6">
                {section.items.map((item) => (
                  <div class="border-l-4 border-primary-400 pl-6 py-6 bg-gradient-to-r from-slate-50 to-white rounded-r-xl hover:shadow-lg transition-shadow duration-300">
                    <h3 class="text-2xl font-semibold text-slate-900 mb-3 flex items-center">
                      <span class="text-primary-600 mr-3">ğŸ“Œ</span>
                      {item.titel}
                    </h3>
                    <p class="text-slate-600 leading-relaxed text-lg ml-9">{item.beschrijving}</p>
                  </div>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Contact sectie -->
  <section class="py-20 -mt-4">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold text-slate-900 mb-6">Vragen over de spelregels?</h2>
      <p class="text-xl text-slate-600 mb-8">
        Heb je vragen over de spelregels of het toernooi? Neem gerust contact met ons op.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="inline-flex items-center px-8 py-4 bg-primary-600 text-white rounded-xl font-semibold text-lg hover:bg-primary-700 hover:shadow-lg transform hover:-translate-y-1 transition-all duration-300 shadow-md">
          ğŸ“§ Contact opnemen
        </a>
        <a href="/faq" class="inline-flex items-center px-8 py-4 bg-slate-600 text-white rounded-xl font-semibold text-lg hover:bg-slate-700 hover:shadow-lg transform hover:-translate-y-1 transition-all duration-300 shadow-md">
          â“ Bekijk FAQ
        </a>
      </div>
    </div>
  </section>
  
  <Footer org={site.default.org} contact={site.default.contact} />
</Base>
