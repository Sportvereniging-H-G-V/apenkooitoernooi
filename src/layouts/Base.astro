---
import '../styles/global.css';

const { title = 'Apenkooitoernooi', description = 'Het leukste apenkooitoernooi.' } = Astro.props;
---
<html lang="nl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <!-- Preload font voor header (direct zichtbaar, dus geen warning) -->
    <link rel="preload" href="/fonts/HotMustardBTNPoster.ttf" as="font" type="font/ttf" crossorigin="anonymous" />
    <!-- Preconnect naar Cloudflare Turnstile voor snellere loading -->
    <link rel="preconnect" href="https://challenges.cloudflare.com" crossorigin />
  </head>
  <body class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-slate-50 text-slate-900">
    <main class="bg-gradient-to-br from-slate-50 via-blue-50 to-slate-50">
      <slot />
    </main>
    <script>
      // Prefetch pages on hover for better performance
      (function() {
        const links = document.querySelectorAll('a[href^="/"]');
        let prefetched = new Set();
        
        links.forEach(link => {
          const href = link.getAttribute('href');
          if (!href || href.startsWith('http') || prefetched.has(href)) return;
          
          link.addEventListener('mouseenter', () => {
            if (!prefetched.has(href)) {
              const linkEl = document.createElement('link');
              linkEl.rel = 'prefetch';
              linkEl.href = href;
              linkEl.setAttribute('as', 'document');
              document.head.appendChild(linkEl);
              prefetched.add(href);
            }
          }, { once: true });
        });
      })();
    </script>
  </body>
</html>
